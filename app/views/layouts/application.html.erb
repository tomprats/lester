<!DOCTYPE html>
<html>
  <head>
    <title>Codecalmly</title>
    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <% if flash[:notice] %>
      <p><%= flash[:notice] %></p>
      <hr>
    <% end %>
    <% if flash[:alert] %>
      <p><%= flash[:alert] %></p>
      <hr>
    <% end %>
    <% if @current_user %>
      <span>Galleries: </span>
      <%= link_to "Home", galleries_path %>
      <% if @current_user.artist? %>
        <span> | More: </span>
        <%= link_to "New", new_gallery_path %>
        <%= link_to "Edit Galleries", change_galleries_path %>
        <hr>
      <% end %>
      <%= link_to "Logout", logout_path, method: :delete %>
      <hr>
    <% elsif action_name != "login" %>
      <%= link_to("Login", login_path) %>
      <hr>
    <% end %>
    <%= yield %>
  </body>
</html>
